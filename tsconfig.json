{
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.spec.ts",
    "./src/**/__tests__/**/*.ts",
    "./src/**/*.spec.tsx",
    "./src/**/__tests__/**/*.tsx"
  ],
  "files": [
    "./src/server/code.tsx",
    "./src/server/config.ts",
    "./webpack/client.ts",
    "./webpack/devServer.ts",
    "./webpack/server.ts",
    "./webpack/common.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["es2017"],
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noEmitHelpers": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"]
  }
}
